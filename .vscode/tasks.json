{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "up",
      "command": "${workspaceFolder}/.vscode/up.sh",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/infra/dev/"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "clean",
      "command": "${workspaceFolder}/.vscode/clean.sh",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/infra/dev/"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "logs",
      "command": "docker-compose",
      "args": [
        "logs",
        "-f"
      ],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/infra/dev/"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    }
  ]
}